include context-menus.pug
header.app-bar
    .left
        a.logo(href="/", tabindex="0") Ferrum
    input.search-bar(placeholder="Search", tabindex="0")
    .right
        svg.icon.playlist-toggle-icon(tabindex="0", xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink', enable-background='new 0 0 24 24', fill='#FFFFFF', height='24', version='1.1', viewbox='0 0 24 24', width='24', x='0px', xml:space='preserve', y='0px')
            g
                path(d='M0,0h24v24H0V0z', fill='none')
                g
                    rect(height='2', width='12', x='4', y='10')
                    rect(height='2', width='12', x='4', y='6')
                    rect(height='2', width='8', x='4', y='14')
                    polygon(points='14,14 14,20 19,17')
        svg.icon.account-icon(tabindex="0", xmlns='http://www.w3.org/2000/svg', fill='#FFFFFF', height='24', viewbox='0 0 24 24', width='24')
            path(d='M3 5v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2H5c-1.11 0-2 .9-2 2zm12 4c0 1.66-1.34 3-3 3s-3-1.34-3-3 1.34-3 3-3 3 1.34 3 3zm-9 8c0-2 4-3.1 6-3.1s6 1.1 6 3.1v1H6v-1z')
            path(d='M0 0h24v24H0z', fill='none')
main.content
    main.music-page
        header.playlist-header(data-context-menu="playlist")
            img.image(src="/cdn/cover.jpg")
            .playlist-info
                p.playlist-name
                p.playlist-description
        .music-table
            mixin column(colType, colName, colTitle)
                div(class=`col ${colType}`, data-col-name=colName, data-context-menu="track")
                    div(class="cell", data-col-name=colName, data-context-menu="table-header")
                        span.col-span= colTitle
                        div(class="col-resizer "+colName)
                            .line
                        .sort-icon
            +column("flexible-width", "name", "Name")
            +column("auto-width", "time", "Time")
            +column("flexible-width", "artist", "Artist")
            +column("flexible-width", "album", "Album")
            +column("auto-width", "dateAdded", "Date Added")
            +column("auto-width", "plays", "Plays")
div.sidebar-container
    .sidebar-resizer
    aside.sidebar
        svg.icon.create-playlist(tabindex="0", fill='#FFFFFF', xmlns='http://www.w3.org/2000/svg', height='24', viewbox='0 0 24 24', width='24')
            path(d='M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z')
            path(d='M0 0h24v24H0z', fill='none')
        .header Playlists
.drag-track
    .drag-cover-overlay
    img.drag-cover
include player.pug
