{
  "name": "ferrum",
  "productName": "Ferrum",
  "author": "kasper.space",
  "description": "Music library app",
  "version": "0.10.0",
  "repository": "https://github.com/probablykasper/ferrum",
  "scripts": {
    "dev": "npm run napi:dev && concurrently -n web,app -c green,blue npm:dev:web npm:dev:app",
    "dev-release": "npm run napi && concurrently -n web,app -c green,blue npm:dev:web npm:dev:app",
    "dev:web": "vite",
    "dev:app": "NODE_ENV=development electron .",
    "napi": "electron-build-env napi build --cargo-cwd ./native  ./build --release",
    "napi:dev": "electron-build-env napi build --cargo-cwd ./native  ./build",
    "build": "npm run napi && npm run build:web && electron-builder",
    "build:web": "vite build",
    "electron-builder": "electron-builder",
    "lint": "prettier --check --plugin-search-dir=. src *.js && eslint src *.js && svelte-check",
    "format": "prettier --write --plugin-search-dir=. src *.js && eslint --fix src *.js",
    "check": "npm run lint && cargo check --manifest-path native/Cargo.toml"
  },
  "build": {
    "appId": "space.kasper.ferrum",
    "productName": "Ferrum",
    "artifactName": "${productName}-v${version}-${os}.${ext}",
    "mac": {
      "category": "public.app-category.music",
      "icon": "build/icons/icon.icns",
      "target": [
        "dmg"
      ],
      "darkModeSupport": true,
      "identity": null,
      "electronLanguages": null
    },
    "linux": {
      "category": "Audio",
      "icon": "build/icons/icon.icns",
      "maintainer": "kasper.space <example@example.com>",
      "target": [
        "deb",
        "rpm"
      ]
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "files": [
      "build/web",
      "src/electron.js",
      "src/electron/**/*.js",
      "build/addon.node"
    ],
    "directories": {
      "buildResources": "build_resources",
      "output": "build/app"
    }
  },
  "main": "./src/electron.js",
  "napi": {
    "name": "addon"
  },
  "devDependencies": {
    "@napi-rs/cli": "^1.3.5",
    "@sveltejs/vite-plugin-svelte": "1.0.0-next.31",
    "@types/wicg-mediasession": "^1.1.3",
    "concurrently": "^7.2.1",
    "electron": "^13.6.3",
    "electron-build-env": "^0.2.0",
    "electron-builder": "^23.0.3",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.7.0",
    "pug": "^3.0.2",
    "sass": "^1.52.2",
    "svelte": "^3.48.0",
    "svelte-check": "^2.7.2",
    "svelte-preprocess": "^4.10.7",
    "typescript": "^4.7.3",
    "vite": "^2.9.9"
  },
  "dependencies": {
    "music-metadata": "^7.12.3",
    "simple-plist": "^1.3.1"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  }
}
