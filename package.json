{
  "name": "ferrum",
  "productName": "Ferrum",
  "author": "kasper.space",
  "description": "Music library app",
  "version": "0.3.0",
  "repository": "https://github.com/probablykasper/ferrum",
  "build": {
    "appId": "space.kasper.ferrum",
    "productName": "Ferrum",
    "artifactName": "${productName}-v${version}-${os}.${ext}",
    "mac": {
      "category": "public.app-category.music",
      "icon": "assets/Logo 1024.png",
      "target": [
        "dmg"
      ],
      "extendInfo": {
        "NSRequiresAquaSystemAppearance": false
      }
    },
    "files": [
      "public",
      "src/electron.js",
      "src/electron/**/*.js",
      "src/variables.json",
      "native/addon.node"
    ],
    "directories": {
      "buildResources": "build_resources",
      "output": "dist"
    }
  },
  "main": "./src/electron.js",
  "napi": {
    "name": "native/addon"
  },
  "devDependencies": {
    "@napi-rs/cli": "^1.0.3",
    "@snowpack/plugin-svelte": "^3.5.2",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@types/snowpack-env": "^2.3.3",
    "@types/wicg-mediasession": "^1.1.0",
    "concurrently": "^5.3.0",
    "electron": "^11.2.3",
    "electron-build-env": "^0.2.0",
    "electron-builder": "^22.9.1",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.1.4",
    "pug": "^3.0.0",
    "sass": "^1.32.7",
    "snowpack": "^3.0.11",
    "svelte": "^3.32.3",
    "svelte-check": "^1.1.34",
    "svelte-preprocess": "^4.6.9",
    "svelte-routing": "^1.5.0",
    "typescript": "^4.1.5"
  },
  "scripts": {
    "start": "concurrently npm:snowpack:dev npm:app:dev",
    "build": "npm run snowpack:build && npm run napi:build && electron-builder",
    "snowpack:dev": "snowpack dev",
    "snowpack:build": "snowpack build",
    "app:dev": "npm run napi:dev && NODE_ENV=development electron .",
    "napi:dev": "electron-build-env napi build --cargo-cwd ./native",
    "napi:build": "electron-build-env napi build --cargo-cwd ./native --release",
    "lint": "prettier --write *.js *.json src public types",
    "check": "svelte-check"
  },
  "dependencies": {
    "music-metadata": "^7.7.0",
    "simple-plist": "^1.1.1"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "htmlWhitespaceSensitivity": "strict",
    "svelteSortOrder": "options-scripts-styles-markup",
    "svelteStrictMode": false,
    "svelteAllowShorthand": true,
    "svelteBracketNewLine": false,
    "svelteIndentScriptAndStyle": true
  }
}
