{
  "name": "ferrum",
  "productName": "Ferrum",
  "author": "kasper.space",
  "description": "Music library app",
  "version": "0.7.0",
  "repository": "https://github.com/probablykasper/ferrum",
  "scripts": {
    "dev": "npm run napi:dev && concurrently -n web,app -c green,blue npm:dev:web npm:dev:app",
    "dev-release": "npm run napi && concurrently -n web,app -c green,blue npm:dev:web npm:dev:app",
    "dev:web": "vite",
    "dev:app": "NODE_ENV=development electron .",
    "napi": "electron-build-env napi build --cargo-cwd ./native  ./build --release",
    "napi:dev": "electron-build-env napi build --cargo-cwd ./native  ./build",
    "build": "npm run napi && npm run build:web && electron-builder",
    "build-ci": "npm run napi && npm run build:web",
    "build:web": "vite build",
    "lint": "prettier --write --ignore-path .gitignore *.js *.json src",
    "check": "svelte-check"
  },
  "build": {
    "appId": "space.kasper.ferrum",
    "productName": "Ferrum",
    "artifactName": "${productName}-v${version}-${os}.${ext}",
    "mac": {
      "category": "public.app-category.music",
      "icon": "build/icons/icon.icns",
      "target": [
        "dmg"
      ],
      "darkModeSupport": true,
      "identity": null
    },
    "linux": {
      "category": "Audio",
      "icon": "build/icons/icon.icns",
      "maintainer": "kasper.space <example@example.com>",
      "target": [
        "deb",
        "rpm"
      ]
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "files": [
      "build/web",
      "src/electron.js",
      "src/electron/**/*.js",
      "build/addon.node"
    ],
    "directories": {
      "buildResources": "build_resources",
      "output": "build/app"
    }
  },
  "main": "./src/electron.js",
  "napi": {
    "name": "addon"
  },
  "devDependencies": {
    "@napi-rs/cli": "^1.2.0",
    "@sveltejs/vite-plugin-svelte": "1.0.0-next.15",
    "@types/wicg-mediasession": "^1.1.2",
    "concurrently": "^6.2.0",
    "electron": "^12.0.16",
    "electron-build-env": "^0.2.0",
    "electron-builder": "^22.11.7",
    "prettier": "^2.3.2",
    "prettier-plugin-svelte": "^2.3.1",
    "pug": "^3.0.2",
    "sass": "^1.37.5",
    "svelte": "^3.42.1",
    "svelte-check": "^2.2.4",
    "svelte-preprocess": "^4.7.4",
    "typescript": "^4.3.5",
    "vite": "^2.4.4"
  },
  "dependencies": {
    "music-metadata": "^7.8.1",
    "simple-plist": "^1.1.1"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "htmlWhitespaceSensitivity": "strict",
    "svelteSortOrder": "options-scripts-markup-styles",
    "svelteStrictMode": false,
    "svelteAllowShorthand": true,
    "svelteBracketNewLine": false,
    "svelteIndentScriptAndStyle": true
  }
}
