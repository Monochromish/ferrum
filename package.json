{
  "name": "ferrum",
  "productName": "Ferrum",
  "author": "kasper.space",
  "description": "Music library app",
  "version": "0.1.0",
  "repository": "https://github.com/probablykasper/ferrum",
  "build": {
    "appId": "space.kasper.ferrum",
    "productName": "Ferrum",
    "artifactName": "${productName}-v${version}-${os}.${ext}",
    "mac": {
      "category": "public.app-category.music",
      "target": [
        "dmg"
      ],
      "extendInfo": {
        "NSRequiresAquaSystemAppearance": false
      }
    },
    "files": [
      "public",
      "src/**/*.js",
      "native/addon.node"
    ],
    "directories": {
      "buildResources": "build_resources",
      "output": "dist"
    }
  },
  "main": "./src/electron.js",
  "napi": {
    "name": "native/addon"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@napi-rs/cli": "^1.0.0",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@sveltejs/svelte-virtual-list": "^3.0.1",
    "concurrently": "^5.3.0",
    "electron": "^11.1.1",
    "electron-build-env": "^0.2.0",
    "electron-builder": "^22.9.1",
    "eslint": "^7.16.0",
    "eslint-plugin-svelte3": "^3.0.0",
    "music-metadata": "^7.5.2",
    "nollup": "^0.14.4",
    "npm-run-all": "^4.1.5",
    "pug": "^3.0.0",
    "rollup": "^2.35.1",
    "rollup-plugin-hot": "^0.1.1",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte-hot": "^0.13.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.30.0",
    "sirv-cli": "^1.0.10",
    "svelte": "^3.31.0",
    "svelte-preprocess": "^4.6.1"
  },
  "scripts": {
    "start": "DEV_PORT=5000 concurrently npm:dev:ui:nollup npm:dev:electron",
    "dev:ui:nollup": "nollup -c --hot --port $DEV_PORT --content-base ./public",
    "dev:electron": "npm run dev:napi && APP_ENV=dev electron .",
    "dev:napi": "electron-build-env napi build --cargo-cwd ./native",
    "dev:ui:rollup": "rollup -c -w",
    "dev:ui:livereload": "rollup -c -w --environment LIVERELOAD",
    "build": "npm run build:ui && npm run build:napi && electron-builder",
    "build:napi": "electron-build-env napi build --cargo-cwd ./native --release",
    "build:ui": "rollup -c",
    "serve:ui": "sirv public",
    "lint": "eslint . **/*.pug"
  },
  "dependencies": {
    "simple-plist": "^1.1.1"
  }
}
