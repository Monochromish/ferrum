{
  "name": "ferrum",
  "productName": "Ferrum",
  "author": "kasper.space",
  "description": "Music library app",
  "version": "0.5.0",
  "repository": "https://github.com/probablykasper/ferrum",
  "scripts": {
    "dev": "npm run napi:dev && concurrently -n web,app -c green,blue npm:dev:web npm:dev:app",
    "dev-release": "npm run napi && concurrently -n web,app -c green,blue npm:dev:web npm:dev:app",
    "dev:web": "vite",
    "dev:app": "NODE_ENV=development electron .",
    "napi": "electron-build-env napi build --cargo-cwd ./native --release",
    "napi:dev": "electron-build-env napi build --cargo-cwd ./native",
    "build": "npm run napi && npm run build:web && electron-builder",
    "build:web": "vite build",
    "lint": "prettier --write --ignore-path .gitignore *.js *.json src public types",
    "check": "svelte-check"
  },
  "build": {
    "appId": "space.kasper.ferrum",
    "productName": "Ferrum",
    "artifactName": "${productName}-v${version}-${os}.${ext}",
    "mac": {
      "category": "public.app-category.music",
      "icon": "assets/Logo 1024.png",
      "target": [
        "dmg"
      ],
      "extendInfo": {
        "NSRequiresAquaSystemAppearance": false
      }
    },
    "files": [
      "build",
      "src/electron.js",
      "src/electron/**/*.js",
      "src/variables.json",
      "native/addon.node"
    ],
    "directories": {
      "buildResources": "build_resources",
      "output": "dist"
    }
  },
  "main": "./src/electron.js",
  "napi": {
    "name": "native/addon"
  },
  "devDependencies": {
    "@napi-rs/cli": "^1.0.3",
    "@svitejs/vite-plugin-svelte": "^0.11.1",
    "@types/wicg-mediasession": "^1.1.0",
    "concurrently": "^6.0.0",
    "electron": "^12.0.2",
    "electron-build-env": "^0.2.0",
    "electron-builder": "^22.10.5",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "pug": "^3.0.2",
    "sass": "^1.32.8",
    "svelte": "^3.35.0",
    "svelte-check": "^1.3.0",
    "svelte-preprocess": "^4.6.9",
    "svelte-routing": "^1.5.0",
    "typescript": "^4.2.3",
    "vite": "^2.1.3"
  },
  "dependencies": {
    "music-metadata": "^7.8.1",
    "simple-plist": "^1.1.1"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "htmlWhitespaceSensitivity": "strict",
    "svelteSortOrder": "options-scripts-styles-markup",
    "svelteStrictMode": false,
    "svelteAllowShorthand": true,
    "svelteBracketNewLine": false,
    "svelteIndentScriptAndStyle": true
  }
}
